class Persegi:
    def __init__(self, sisi):
        self.sisi = sisi

    def hitung_luas(self):
        return self.sisi ** 2

    def hitung_keliling(self):
        return 4 * self.sisi

# Menerima input dari pengguna untuk panjang sisi persegi
sisi_persegi = float(input("Masukkan panjang sisi persegi: "))

# Membuat objek Persegi dengan panjang sisi yang dimasukkan
persegi = Persegi(sisi_persegi)

# Menghitung luas dan keliling persegi
luas_persegi = persegi.hitung_luas()
keliling_persegi = persegi.hitung_keliling()

# Menampilkan hasil
print("Luas persegi:", luas_persegi)
print("Keliling persegi:", keliling_persegi)
